{
  "network": {
    "servers": [ 
        {% for logserver, info in network.get('logging', {}).get('servers', {}).items() %}
        "{{ info.fqdn }}:{{ info.ip|default(logstash.forwarder.port) }}"
        {% endfor %}
    ],

    "ssl ca": "{{ logstash.pki.cert }}",

    "timeout": {{ logstash.forwarder.timeout }}
    },

  "files": [
    {
      "paths": [
        "/var/log/messages",
        "/var/log/secure"
       ],
      "fields": { "type": "syslog" }
    }
  ]
}
